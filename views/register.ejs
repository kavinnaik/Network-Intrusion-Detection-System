<body onload="myFunction()" style="margin:0;">

<div id="loader"></div>

<div style="display:none;" id="myDiv" class="animate-bottom">
  <!-- complete body without including head -->
  <div class="row">
    <div class="login-box">
      <h1>Sign Up</h1>
      <form action="/register" method="post">
        <div class="textbox">
          <span class="icon"><i class="fas fa-user"></i></span>
          <div class="input-group">
            <span class="input-icon">
              <i class="fa fa-user"></i>
            </span>
            <input type="email" name="email" class="input-field" placeholder="User-Name (Email)" required>
          </div>
        </div>
        
        <div class="textbox">
          <span class="icon"><i class="fas fa-lock"></i></span>
          <div class="input-group">
            <span class="input-icon">
              <i class="fa fa-lock"></i>
            </span>
            <input type="password" name="password" class="input-field" placeholder="Password" required>
          </div>
        </div>
        
      <button type="submit" class="btn btn-success">SIGN UP</button></form>
      <a class="btn btn-block btn-social btn-google btn-dark" style="text-align: center;background-color: #dd4b39; #dd4b39" href="/auth/google" role="button">
        <i class="fab fa-google"></i>
        Sign Up with Google
      </a>
      <a href="/login" style="color: white;float: right;font-size: small">Already have an account? Login</a>
      
        </div>
        </div>
    </div>
    <%-include('partials/footer') %>
</div>

